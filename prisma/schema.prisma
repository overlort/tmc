generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Category {
  id          Int          @id @default(autoincrement())
  name        String
  icon        String?
  parentId    Int?
  createdAt   DateTime     @default(now())
  updatedAt   DateTime     @updatedAt
  assets      Asset[]
  parent      Category?    @relation("CategoryToCategory", fields: [parentId], references: [id])
  children    Category[]   @relation("CategoryToCategory")
  consumables Consumable[]
}

model Asset {
  id              Int         @id @default(autoincrement())
  name            String
  photoUrl        String?
  inventoryNumber String
  article         String
  brand           String
  location        String
  owner           String
  status          AssetStatus @default(IN_STOCK)
  price           Int
  comment         String?
  categoryId      Int?
  lastModified    DateTime    @updatedAt
  category        Category?   @relation(fields: [categoryId], references: [id])
  incomes         Income[]
}

model Consumable {
  id              Int       @id @default(autoincrement())
  name            String
  photoUrl        String?
  inventoryNumber String
  article         String
  brand           String
  location        String
  quantityUnit    Unit      @default(PCS)
  quantity        Decimal
  price           Int
  comment         String?
  categoryId      Int?
  category        Category? @relation(fields: [categoryId], references: [id])
  expenses        Expense[]
  incomes         Income[]
}

model Expense {
  id           Int        @id @default(autoincrement())
  consumableId Int
  quantity     Decimal
  date         DateTime   @default(now())
  receiver     String
  comment      String?
  consumable   Consumable @relation(fields: [consumableId], references: [id])
}

model Income {
  id           Int      @id @default(autoincrement())
  createdAt    DateTime @default(now())
  creatorName  String
  incomeNumber String   @unique
  incomeDate   DateTime
  seller       String
  buyer        String
  photoUrl     String
  assetId      Int?
  consumableId Int?

  asset        Asset?     @relation(fields: [assetId], references: [id])
  consumable   Consumable? @relation(fields: [consumableId], references: [id])
}

enum AssetStatus {
  IN_STOCK
  DISPOSED
}

enum Unit {
  PCS //шт
  BOX //коробка
  PACK //комплект
  L //литр
  ML //милилитр
  KG //кг
  G //г
  M //метр
  CM //сантиметр
}
